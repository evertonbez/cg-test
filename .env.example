# ==========================================
# COGRADE - Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# Node Environment
# ==========================================
NODE_ENV=development
PORT=3333

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# Firebase Service Account
# ==========================================
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Format: JSON string (minified, no newlines)
# Example: {"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
FIREBASE_SERVICE_ACCOUNT=

# ==========================================
# Cloudflare R2 Storage Configuration
# ==========================================
# Get R2 credentials from Cloudflare dashboard
AWS_REGION=auto
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ACCOUNT_ID=

# ==========================================
# Frontend Configuration
# ==========================================
# URL of the API backend (used during frontend build)
VITE_API_URL=http://localhost:3333
